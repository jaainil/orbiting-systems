---
import '@/styles/global.css';
import { Navbar } from '@/components/react/Navbar';
import { Footer } from '@/components/react/Footer';
import { Toaster as Sonner } from '@/components/ui/sonner';
import { generateOrganizationSchema, generateWebSiteSchema } from '@/lib/schema';
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  lang?: string;
}

const { 
  title, 
  description = "Aexaware Infotech - Building Digital Excellence", 
  image = "/og-image.png",
  type = "website",
  publishedTime,
  modifiedTime,
  author,
  tags,
  lang = "en"
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteUrl = Astro.site || 'https://aexaware.com';
const canonicalURL = new URL(currentPath, siteUrl).href;
const imageUrl = new URL(image, siteUrl).href;

// Generate JSON-LD structured data
const organizationSchema = generateOrganizationSchema({
  name: "Aexaware Infotech",
  url: siteUrl.toString(),
  logo: new URL('/og-image.png', siteUrl).href,
  description: "Full-service digital agency specializing in web development, mobile apps, AI/ML integration, and cloud solutions",
  sameAs: [
    "https://www.linkedin.com/company/aexaware",
    "https://twitter.com/aexaware",
    "https://github.com/aexaware"
  ],
  contactPoint: {
    telephone: "+91-8140734392",
    contactType: "Customer Service",
    email: "contact@aexaware.com"
  },
  address: {
    streetAddress: "Anand",
    addressLocality: "Vadodara",
    addressRegion: "Gujarat",
    postalCode: "388001",
    addressCountry: "IN"
  }
});

const websiteSchema = generateWebSiteSchema({
  name: "Aexaware Infotech",
  url: siteUrl.toString(),
  description: "Building Digital Excellence - Web, Mobile, AI/ML Solutions"
});
---

<!doctype html>
<html lang={lang}>
  <head>
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: type,
          image: imageUrl,
          url: canonicalURL,
        },
        optional: {
          siteName: "Aexaware Infotech",
          locale: "en_US",
          description: description,
        },
        article: type === 'article' ? {
          publishedTime: publishedTime,
          modifiedTime: modifiedTime,
          authors: author ? [author] : undefined,
          tags: tags,
        } : undefined,
      }}
      twitter={{
        card: "summary_large_image",
        site: "@aexaware",
        creator: "@aexaware",
        title: title,
        description: description,
        image: imageUrl,
      }}
      extend={{
        link: [
          { rel: "icon", type: "image/png", href: "/favicon.png" },
          { rel: "apple-touch-icon", href: "/favicon.png" },
          { rel: "canonical", href: canonicalURL },
        ],
        meta: [
          { name: "viewport", content: "width=device-width, initial-scale=1" },
          { name: "generator", content: Astro.generator },
          { name: "theme-color", content: "#3b82f6" },
        ],
      }}
    />
    
    <!-- Sitemap & RSS -->
    {import.meta.env.PROD && <link rel="sitemap" href="/sitemap-index.xml" />}
    <link rel="alternate" type="application/rss+xml" title="Aexaware Infotech Blog" href="/rss.xml" />
    
    <!-- Preconnect for fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
        rel="stylesheet"
      />
    </noscript>
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={organizationSchema} />
    <script type="application/ld+json" set:html={websiteSchema} />
    <slot name="head" />
  </head>
  <body>
    <Navbar client:load currentPath={currentPath} />
    <main>
      <slot />
    </main>
    <Footer client:visible />
    <Sonner client:idle />
  </body>
</html>
