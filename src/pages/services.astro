---
import Layout from '@/layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import {
  ArrowRight,
  Code2,
  Smartphone,
  Palette,
  Cloud,
  Database,
  LineChart,
  Globe,
  ShieldCheck,
  Zap,
  Layers,
  Cpu,
  Server,
} from "lucide-react";

const services = [
  {
    icon: Code2,
    title: "Web Development",
    desc: "Custom websites and web applications built with modern frameworks for speed, scalability, and SEO.",
    tags: ["React", "Next.js", "TypeScript"],
    path: "/services/web-development",
  },
  {
    icon: Smartphone,
    title: "Mobile App Development",
    desc: "Native and cross-platform mobile apps that deliver seamless user experiences on iOS and Android.",
    tags: ["React Native", "Flutter", "iOS/Android"],
    path: "/services/mobile-development",
  },
  {
    icon: Palette,
    title: "UI/UX Design",
    desc: "User-centric design that blends aesthetics with functionality to create intuitive digital products.",
    tags: ["Figma", "Prototyping", "User Research"],
    path: "/services/ui-ux-design",
  },
  {
    icon: Cloud,
    title: "Cloud Solutions",
    desc: "Secure and scalable cloud infrastructure setup, migration, and management services.",
    tags: ["AWS", "Azure", "GCP", "Kubernetes"],
    path: "/services/cloud-devops",
  },
  {
    icon: Database,
    title: "AI/ML Integration",
    desc: "Data-driven decision making, predictive modelling, recommendation engines, chatbot automation, and AI-driven features.",
    tags: ["Python", "TensorFlow", "OpenAI"],
    path: "/services/ai-ml-integration",
  },
  {
    icon: LineChart,
    title: "E-commerce Development",
    desc: "Secure online stores with payment integration, inventory management, and responsive design.",
    tags: ["Shopify", "WooCommerce", "Custom"],
    path: "/services/ecommerce",
  },
];

const solutions = [
  {
    title: "E-Commerce",
    desc: "High-converting online stores with seamless checkout experiences.",
  },
  {
    title: "Healthcare",
    desc: "HIPAA-compliant applications for patient management and telemedicine.",
  },
  {
    title: "FinTech",
    desc: "Secure and robust financial platforms for banking and payments.",
  },
  {
    title: "Education",
    desc: "Interactive learning management systems and educational portals.",
  },
];

const techStack = [
  "React",
  "Next.js",
  "TypeScript",
  "Node.js",
  "Python",
  "PostgreSQL",
  "AWS",
  "Docker",
  "Flutter",
  "Tailwind CSS",
  "Figma",
  "GraphQL",
];
---

<Layout 
  title="Services â€“ Aexaware Infotech" 
  description="Explore our comprehensive range of digital services including web development, mobile apps, AI/ML integration, and cloud solutions."
>
  {/* Hero Section */}
  <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-primary/5 to-transparent -z-10" />
    <div class="container mx-auto px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-1.5 rounded-full bg-primary/10 text-primary text-sm font-medium">
          Our Expertise
        </span>
        <h1 class="mt-8 font-serif text-5xl font-medium leading-tight text-foreground sm:text-6xl lg:text-7xl">
          Digital solutions that <br class="hidden md:block" />
          <span class="italic text-muted-foreground">
            drive growth.
          </span>
        </h1>
        <p class="mx-auto mt-8 max-w-2xl text-lg text-muted-foreground leading-relaxed">
          We provide custom web development, mobile-app development, UI/UX
          design, cloud and DevOps support, custom software/ERP/CRM/SaaS
          solutions, e-commerce development and AI/ML integration.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
          <Button
            size="lg"
            className="h-12 rounded-full px-8 text-base"
            asChild
          >
            <a href="/contact" aria-label="Start a project with us">
              Start a Project <ArrowRight className="ml-2 h-5 w-5" />
            </a>
          </Button>
          <Button
            variant="outline"
            size="lg"
            className="h-12 rounded-full px-8 text-base"
            asChild
          >
            <a href="#capabilities">Explore Services</a>
          </Button>
        </div>
      </div>
    </div>
  </section>

  {/* Core Capabilities */}
  <section id="capabilities" class="py-24 bg-secondary/30">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="font-serif text-4xl font-medium text-foreground mb-6">
          Core Capabilities
        </h2>
        <p class="text-lg text-muted-foreground">
          We offer a comprehensive suite of digital services designed to
          meet the evolving needs of modern businesses.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {services.map((service) => (
          <a
            href={service.path}
            class="group relative bg-background p-8 rounded-3xl border border-border/50 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 block"
          >
            <div class="mb-6 inline-flex p-4 rounded-2xl bg-primary/5 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
              <service.icon className="h-8 w-8" aria-hidden="true" />
            </div>
            <h3 class="text-2xl font-medium text-foreground mb-3">
              {service.title}
            </h3>
            <p class="text-muted-foreground leading-relaxed mb-6">
              {service.desc}
            </p>
            <div class="flex flex-wrap gap-2">
              {service.tags.map((tag) => (
                <span class="px-3 py-1 rounded-full bg-secondary text-xs font-medium text-muted-foreground">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* Our Solutions - Feature Highlight */}
  <section class="py-24">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <h2 class="font-serif text-4xl font-medium text-foreground">
            Solutions tailored to your industry.
          </h2>
          <p class="text-lg text-muted-foreground leading-relaxed">
            We understand that every industry has unique challenges. Our
            team has deep expertise in delivering specialized solutions for
            various sectors.
          </p>

          <div class="space-y-6">
            {solutions.map((item) => (
              <div class="flex gap-4">
                <div class="mt-1 p-1 rounded-full bg-primary/10 text-primary h-fit">
                  <ArrowRight className="h-4 w-4" aria-hidden="true" />
                </div>
                <div>
                  <h3 class="font-medium text-foreground text-lg">
                    {item.title}
                  </h3>
                  <p class="text-muted-foreground">{item.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        <div class="relative">
          <div class="aspect-[4/3] rounded-3xl overflow-hidden bg-secondary/50 border border-border">
            {/* Abstract representation of industry solutions */}
            <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-accent/5" />
            <div class="grid grid-cols-2 gap-4 p-8 h-full">
              <div class="bg-background rounded-2xl shadow-sm p-6 flex flex-col justify-center items-center text-center">
                <Globe className="h-10 w-10 text-primary mb-4" aria-hidden="true" />
                <span class="font-medium">Global Reach</span>
              </div>
              <div class="bg-background rounded-2xl shadow-sm p-6 flex flex-col justify-center items-center text-center mt-8">
                <ShieldCheck className="h-10 w-10 text-primary mb-4" aria-hidden="true" />
                <span class="font-medium">Secure</span>
              </div>
              <div class="bg-background rounded-2xl shadow-sm p-6 flex flex-col justify-center items-center text-center -mt-8">
                <Zap className="h-10 w-10 text-primary mb-4" aria-hidden="true" />
                <span class="font-medium">Fast</span>
              </div>
              <div class="bg-background rounded-2xl shadow-sm p-6 flex flex-col justify-center items-center text-center">
                <Layers className="h-10 w-10 text-primary mb-4" aria-hidden="true" />
                <span class="font-medium">Scalable</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Technology Stack */}
  <section class="py-24 bg-primary text-primary-foreground">
    <div class="container mx-auto px-6 lg:px-8 text-center">
      <h2 class="font-serif text-4xl font-medium mb-16">
        Powered by modern technology.
      </h2>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 opacity-80">
        {techStack.map((tech) => (
          <div class="flex items-center justify-center p-4 rounded-xl bg-white/10 backdrop-blur-sm border border-white/10 hover:bg-white/20 transition-colors">
            <span class="font-medium">{tech}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-24 bg-secondary/30">
    <div class="container mx-auto px-6 lg:px-8 text-center">
      <div class="max-w-3xl mx-auto bg-background rounded-[2.5rem] p-12 shadow-2xl border border-border/50">
        <h2 class="font-serif text-4xl md:text-5xl font-medium text-foreground mb-6">
          Ready to scale your business?
        </h2>
        <p class="text-xl text-muted-foreground mb-10 leading-relaxed">
          Let's build something amazing together. Contact us today for a
          free consultation and quote.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button
            size="lg"
            className="rounded-full px-10 h-14 text-lg"
            asChild
          >
            <a href="/contact" aria-label="Get a free quote">Get a Free Quote</a>
          </Button>
          <Button
            variant="outline"
            size="lg"
            className="rounded-full px-10 h-14 text-lg"
            asChild
          >
            <a href="tel:+918140734392">Call Us Now</a>
          </Button>
        </div>
      </div>
    </div>
  </section>
</Layout>
