---
import Layout from '@/layouts/Layout.astro';
import { Home, Search } from "lucide-react";
---

<Layout 
  title="Page Not Found â€“ Aexaware Infotech" 
  description="The page you are looking for does not exist."
>
  <div class="flex min-h-screen items-center justify-center bg-background relative overflow-hidden">
    {/* Subtle background effect */}
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5" />
    
    {/* Floating orb */}
    <div class="absolute top-1/4 left-1/3 w-64 h-64 rounded-full bg-primary/10 blur-3xl animate-float" />
    
    <div class="relative z-10 text-center space-y-8 px-6">
      {/* 404 with orbital ring */}
      <div class="relative inline-block">
        <h1 class="text-9xl font-bold text-primary/20">404</h1>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-32 h-32 rounded-full border-2 border-primary animate-pulse" />
        </div>
      </div>
      
      <div class="space-y-4">
        <h2 class="text-3xl md:text-4xl font-bold">
          You've Drifted <span class="text-primary">Off Course</span>
        </h2>
        <p class="text-xl text-muted-foreground max-w-md mx-auto">
          This page doesn't exist, but your next project can. Let us help you navigate back.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4">
        <a href="/" class="inline-flex items-center justify-center h-12 rounded-full px-8 text-base font-medium bg-primary text-primary-foreground hover:bg-primary/90 transition-colors shadow-md">
          <Home className="mr-2 w-5 h-5" />
          Back to Home
        </a>
        <a href="/services" class="inline-flex items-center justify-center h-12 rounded-full px-8 text-base font-medium border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors">
          <Search className="mr-2 w-5 h-5" />
          Explore Services
        </a>
      </div>
    </div>
  </div>
</Layout>
