---
import Layout from '@/layouts/Layout.astro';
import ContactForm from '@/components/ContactForm.astro';
import {
  Mail,
  MapPin,
  Phone,
  Clock,
  Linkedin,
  Instagram,
  Twitter,
  Facebook,
} from "lucide-astro";

const socialLinks = [
  { icon: Linkedin, href: "https://www.linkedin.com/company/aexaware" },
  { icon: Instagram, href: "https://instagram.com/aexaware" }, // Assuming this based on pattern
  { icon: Twitter, href: "https://twitter.com/aexaware" },
  { icon: Facebook, href: "https://facebook.com/aexaware" }, // Assuming this based on pattern
];
---

<Layout 
  title="Contact Aexaware Infotech – Let’s Build Together" 
  description="Get in touch with Aexaware Infotech for custom web, mobile & AI solutions."
>
  <section class="pt-32 pb-16 lg:pt-48 lg:pb-24">
    <div class="container mx-auto px-6 lg:px-8">
      <div class="grid gap-16 lg:grid-cols-2 lg:gap-24">
        {/* Left Column: Copy & Info */}
        <div>
          <span class="text-sm font-semibold uppercase tracking-widest text-muted-foreground">
            Contact Us
          </span>
          <h1 class="mt-6 font-serif text-5xl font-medium leading-tight text-foreground md:text-6xl">
            Get in touch <br />
            <span class="italic text-muted-foreground">with us</span>.
          </h1>
          <p class="mt-8 text-xl text-muted-foreground leading-relaxed">
            We Should Talk. Whether you have a concrete project in mind or
            just a vague idea, we're here to listen.
          </p>

          <div class="mt-12 space-y-8">
            <div class="flex items-start gap-4">
              <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                <Mail className="size-5" />
              </div>
              <div>
                <h3 class="font-sans font-semibold text-lg text-foreground">Email</h3>
                <a
                  href="mailto:info@aexaware.com"
                  class="text-muted-foreground hover:text-primary transition-colors"
                >
                  info@aexaware.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                <Phone className="size-5" />
              </div>
              <div>
                <h3 class="font-sans font-semibold text-lg text-foreground">Phone</h3>
                <a
                  href="tel:+918140734392"
                  class="text-muted-foreground hover:text-primary transition-colors"
                >
                  +91 81407 34392
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                <MapPin className="size-5" />
              </div>
              <div>
                <h3 class="font-sans font-semibold text-lg text-foreground">Address</h3>
                <p class="text-muted-foreground max-w-xs">
                  Office no 13, 3rd Floor Aarya’s landmark, Canal Ring Road,
                  Sevasi Vadodara, Gujarat 391101
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex size-10 shrink-0 items-center justify-center rounded-full bg-secondary text-primary">
                <Clock className="size-5" />
              </div>
              <div>
                <h3 class="font-sans font-semibold text-lg text-foreground">
                  Working Hours
                </h3>
                <p class="text-muted-foreground">
                  Mon – Fri : 9AM – 6PM
                </p>
                <p class="text-muted-foreground">Sat : 10AM - 12AM</p>
                <p class="text-muted-foreground">Sun : Closed</p>
              </div>
            </div>

            <div class="pt-4">
              <h3 class="font-sans font-semibold text-lg text-foreground mb-4">
                Follow us
              </h3>
              <div class="flex gap-4">
                {socialLinks.map((social) => (
                  <a
                    href={social.href}
                    class="flex size-10 items-center justify-center rounded-full border border-border bg-background text-muted-foreground transition-colors hover:bg-primary hover:text-primary-foreground hover:border-primary"
                  >
                    <social.icon className="size-5" />
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>

        {/* Right Column: Form */}
        <div class="rounded-[2.5rem] bg-secondary/30 backdrop-blur-sm p-8 md:p-12 border border-border/50 shadow-lg">
          <h2 class="text-2xl font-medium mb-6">Send us a message</h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>
